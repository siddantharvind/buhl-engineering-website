---
// Header Component
interface Props {
  logoImage?: string;
}

const { logoImage = '/assets/images/logo.png' } = Astro.props;
---

<header>
  <nav>
    <button class="menu-toggle" id="menuToggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <a href="/" class="logo-link">
      <img src={logoImage} alt="Buhl Engineering" class="logo" />
    </a>
    <ul class="nav-links" id="navLinks">
      <li><a href="/">Home</a></li>
      <li><a href="/careers">Careers</a></li>
      <li><a href="/terms-of-service">Terms</a></li>
      <li><a href="/privacy-policy">Privacy</a></li>
    </ul>
  </nav>
</header>

<script>
  function toggleMenu() {
    const toggle = document.getElementById('menuToggle');
    const navLinks = document.getElementById('navLinks');
    toggle?.classList.toggle('active');
    navLinks?.classList.toggle('active');
  }
  
  // Add click handler
  document.getElementById('menuToggle')?.addEventListener('click', toggleMenu);
  
  // Close menu when a link is clicked
  document.querySelectorAll('.nav-links a').forEach(link => {
    link.addEventListener('click', () => {
      document.getElementById('menuToggle')?.classList.remove('active');
      document.getElementById('navLinks')?.classList.remove('active');
    });
  });
</script>

<style>
  :root {
    --navy: #001220;
    --cream: #FDFBD4;
    --cream-dim: rgba(253, 251, 212, 0.7);
    --cream-dimmer: rgba(253, 251, 212, 0.4);
  }

  header {
    width: 100%;
    z-index: 10;
  }

  nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1.5rem 4rem;
    position: sticky;
    top: 0;
    background: rgba(0, 18, 32, 0.95);
    backdrop-filter: blur(10px);
    z-index: 100;
    border-bottom: 1px solid rgba(253, 251, 212, 0.1);
    width: 100%;
    box-sizing: border-box;
  }

  .logo-link {
    display: flex;
    align-items: center;
  }

  .logo {
    height: clamp(1.5rem, 5vw, 3rem);
    width: auto;
    opacity: 0.9;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links li {
    list-style: none;
  }

  .nav-links a {
    color: var(--cream-dim);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
    transition: color 0.3s;
  }

  .nav-links a:hover {
    color: var(--cream);
  }

  .menu-toggle {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 101;
    width: 40px;
    height: 40px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  .menu-toggle span {
    display: block;
    width: 20px;
    height: 2.5px;
    background: var(--cream);
    margin: 3px 0;
    transition: 0.3s;
    transform-origin: center;
  }

  .menu-toggle.active span:nth-child(1) {
    transform: rotate(45deg) translateY(9px);
  }

  .menu-toggle.active span:nth-child(2) {
    transform: scaleX(0);
  }

  .menu-toggle.active span:nth-child(3) {
    transform: rotate(-45deg) translateY(-9px);
  }

  @media (max-width: 768px) {
    nav {
      padding: 1rem 1.5rem;
      position: relative;
      flex-wrap: wrap;
      justify-content: center;
    }

    .menu-toggle {
      position: absolute;
      top: 50%;
      left: 1.5rem;
      transform: translateY(-50%);
      padding: 0;
      width: 40px;
      height: 40px;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }

    .menu-toggle span {
      width: 20px;
      height: 2.5px;
      margin: 3px 0;
    }

    .logo-link {
      order: 2;
      flex: 1;
      display: flex;
      justify-content: center;
    }

    .logo {
      height: clamp(1.5rem, 4vw, 2.5rem);
    }

    .nav-links {
      order: 3;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
      flex-direction: column;
      gap: 0;
      width: 100%;
      max-height: 0;
      overflow: hidden;
      background: rgba(0, 18, 32, 0.99);
      border-top: 1px solid rgba(253, 251, 212, 0.1);
      transition: max-height 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
      padding: 0;
      align-items: stretch;
    }

    .nav-links.active {
      max-height: 400px;
      padding: 0;
      overflow-y: auto;
    }

    .nav-links li {
      text-align: center;
      border-bottom: 1px solid rgba(253, 251, 212, 0.05);
      list-style: none;
    }

    .nav-links li:last-child {
      border-bottom: none;
    }

    .nav-links a {
      display: block;
      padding: 1rem 1.5rem;
      font-size: 0.9rem;
      color: var(--cream-dim);
      text-decoration: none;
    }

    .nav-links a:hover {
      color: var(--cream);
      background: rgba(253, 251, 212, 0.05);
    }
  }

  @media (max-width: 480px) {
    nav {
      padding: 0.75rem 1rem;
    }

    .menu-toggle {
      left: 0.8rem;
      padding: 0;
      width: 38px;
      height: 38px;
    }

    .menu-toggle span {
      width: 18px;
      height: 2px;
      margin: 2.5px 0;
    }

    .logo {
      height: 24px;
    }

    .nav-links a {
      font-size: 0.85rem;
      padding: 0.75rem 1rem;
    }
  }
</style>
