---
import BaseLayout from '../layouts/BaseLayout.astro';
import jobsData from '../data/jobs.json';
import '../styles/careers.css';
---

<BaseLayout title="Careers | Buhl Engineering" logoImage="/assets/images/Buhl Careers.png">
  <div class="hero">
    <div class="hero-tag">Join Our Team</div>
    <h1>Build the Deep Frontier</h1>
    <p class="hero-subtitle">We're assembling an elite team of engineers to redefine sovereign maritime intelligence through precision
            subsea technology.</p>

    <div class="stats">
      <div class="stat">
        <div class="stat-number">0.01mm</div>
        <div class="stat-label">Precision Standards</div>
      </div>
      <div class="stat">
        <div class="stat-number">100%</div>
        <div class="stat-label">Remote Flexible</div>
      </div>
      <div class="stat">
        <div class="stat-number">Global</div>
        <div class="stat-label">Impact Scale</div>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="section-header">
      <h2 class="section-title">Open Positions</h2>
      <p class="section-desc">Explore exciting opportunities to work on cutting-edge engineering projects</p>
    </div>

    <div class="jobs-grid">
      {jobsData.map((job) => (
        <a href={`/jobs/${job.id}`} class="job-card">
          <div class="job-header">
            <div class="job-info">
              <h3 class="job-title">{job.title}</h3>
              <div class="job-meta">
                <span class="meta-item">
                  <svg class="meta-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"></path>
                  </svg>
                  {job.location}
                </span>
                <span class="meta-item">
                  <svg class="meta-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                  </svg>
                  {job.type}
                </span>
                <span class="meta-item">
                  <svg class="meta-icon" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"></path>
                  </svg>
                  Fellowship Program
                </span>
              </div>
            </div>
            <div class="job-type-badge">{job.badge}</div>
          </div>

          <p class="job-description">{job.cardDescription}</p>

          <div class="job-footer">
            <div class="apply-btn">
              Apply Now
              <svg width="16" height="16" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>

    {jobsData.length === 0 && (
      <div class="no-jobs">
        <p>No positions available at the moment. Please check back soon!</p>
      </div>
    )}
  </div>
</BaseLayout>
